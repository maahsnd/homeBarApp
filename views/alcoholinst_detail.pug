block content 
    h3 Bottle ID# #{alcoholinst._id}
    hr
    h5 Info:
    hr
    p #[strong Alcohol: ]
        a(href=alcoholinst.alcohol.url) #{alcoholinst.alcohol.name} 
    p #[strong Location: ]
        a(href=alcoholinst.location.url) #{alcoholinst.location.name}
    if alcoholinst.price   
        p #[strong Price: ] #{alcoholinst.price}
