extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='category_name') Category name:
      input#category_name.form-control(type='text' placeholder='Category Name' name='category_name' required='true' value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='category_description') Description:
      input#category_description.form-control(type='text' placeholder='Category description' name='category_description'  value=(undefined===category ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit
  if errors
    hr
    if (errors.length > 1)
        h3.error Errors: 
    else 
        h3.error Error:
    ul
      for error in errors
        li.error!= error.msg
